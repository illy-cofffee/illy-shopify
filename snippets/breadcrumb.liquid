<style>
    .breadcrumbs {
        padding-top:1.5em;
        padding-bottom:2.8em;
      }
      
      .breadcrumbs__list {
        list-style-type: none;
        margin: 0;
        padding: 0;
      }
      
      .breadcrumbs__item {
        display: inline-block;
      }
      
      .breadcrumbs__item:not(:last-child):after {
        border-style: solid;
        border-width: .10em .10em 0 0;
        content: '';
        display: inline-block;
        height: .20em;
        margin: 0 .20em;
        position: relative;
        transform: rotate(45deg);
        vertical-align: middle;
        width: .20em;
      }
      
      .breadcrumbs__link, .breadcrumbs__link span a {
        color: #000000;
        text-decoration: none;
      }
      
      .breadcrumbs__link[aria-current="page"] {
        color: inherit;
        font-weight: normal;
        text-decoration: none;
      }

</style>
<nav class="breadcrumbs page-width" role="navigation" aria-label="breadcrumbs">
    <ol class="breadcrumbs__list">
      <li class="breadcrumbs__item">

        {% case template %}
            {% when 'collection' %}
                <a class="breadcrumbs__link" href="/collections/all-products">Shop</a>
            {% when 'product' %}
                <a class="breadcrumbs__link" href="/collections/all-products">Shop</a>
          {% else %}
            <a class="breadcrumbs__link" href="/">Home</a>
          {% endcase %}
        </li>
        <li class="breadcrumbs__item">
            {% case template %}
                {% when 'product' %}
            
                    {% for collection in product.collections %}
                        {% if collection.url %}
                            {% if collection.title != "All Products" %}
                            <a class="breadcrumbs__link" href="{{ collection.url }}">{{ collection.title }}</a>
                            {% break %} <!-- Only show first collection -->
                            {% endif %}
                        {%  endif %}
                    {% endfor %}
            {% endcase %}
        </li>

    {% comment %} {% else %}
          <li class="breadcrumbs__item">
            <a class="breadcrumbs__link" href="{{ request.path }}" aria-current="page">{{ page_title }}</a>
          </li> {% endcomment %}
     
    </ol>
  </nav>

