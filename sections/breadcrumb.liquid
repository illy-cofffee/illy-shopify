<style>
    .breadcrumbs {
        padding-top:1.5em;
        padding-bottom:1em;
      }
      
      .breadcrumbs__list {
        list-style-type: none;
        margin: 0;
        padding: 0;
      }
      
      .breadcrumbs__item {
        display: inline-block;
      }
      
      .breadcrumbs__item:not(:last-child):after {
        border-style: solid;
        border-width: .10em .10em 0 0;
        content: '';
        display: inline-block;
        height: .20em;
        margin: 0 .20em;
        position: relative;
        transform: rotate(45deg);
        vertical-align: middle;
        width: .20em;
      }
      
      .breadcrumbs__link, .breadcrumbs__link span a {
        color: #000000;
        text-decoration: none;
      }
      
      .breadcrumbs__link[aria-current="page"] {
        color: inherit;
        font-weight: normal;
        text-decoration: none;
      }

</style>


{% comment %} {% case template %}
  {% when template contains 'product' %} {% endcomment %}
    <nav class="breadcrumbs page-width" role="navigation" aria-label="breadcrumbs">
      <ol class="breadcrumbs__list">
        <li class="breadcrumbs__item">
          <a class="breadcrumbs__link" href="/collections/all-products">Shop</a>
        </li>
        <li class="breadcrumbs__item parent__collection">
          {% for collection in product.collections %}
            {% if collection.url %}
              {% if collection.title != "All products" and collection.title != "Best Sellers" and collection.title != "Coffee" and collection.title != "All Coffee Machines"%}
                <span>{{ collection.title | link_to: collection.url, class: 'breadcrumbs__link'}}</span>
                {% break %} <!-- Only show first collection -->
              {% endif %}
            {%  endif %}
          {% endfor %}
        </li>
      </ol>
    </nav>
  {% comment %} {% when 'collection' %} {% endcomment %}
  {% comment %} don't include {% endcomment %}
  
  {% comment %} {% else %} {% endcomment %}
  {% comment %} <nav class="breadcrumbs page-width" role="navigation" aria-label="breadcrumbs">
    <ol class="breadcrumbs__list">
      <li class="breadcrumbs__item">
        <a class="breadcrumbs__link" href="/">Home</a>
      </li>
      <li class="breadcrumbs__item">
        <a class="breadcrumbs__link" href="{{ request.path }}" aria-current="page">{{ page_title }}</a>
      </li>
    </ol>
  </nav>
{% endcase %} {% endcomment %}

{% schema %}
{
  "name": "Breadcrumb",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "liquid",
      "id": "custom_liquid",
      "label": "t:sections.custom-liquid.settings.custom_liquid.label",
      "info": "t:sections.custom-liquid.settings.custom_liquid.info"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
    }
  ],
  "presets": [
    {
      "name": "Breadcrumb"
    }
  ]
}
{% endschema %}

<script>
  const collectionTitle = sessionStorage.getItem( 'collection_title' );
  const collectionUrl = sessionStorage.getItem( 'collection_url' );
  if (collectionTitle && collectionUrl) {  
    const container = document.querySelector('.parent__collection');
    const link = document.createElement('a');
    link.href = collectionUrl; 
    link.textContent = collectionTitle; 
    link.className = 'breadcrumbs__link';
    container.innerHTML = '';
    container.appendChild(link);
  }
  sessionStorage.removeItem('collection_title');
  sessionStorage.removeItem('collection_url'); 
</script>


